<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myspring.daengnyang.board.mapper.BoardMapper">

    <!--게시글 목록에 필요한 내용인 글 번호, 제목, 조회 수, 작성일을 조회 -->
    <select id="selectBoardList" parameterType="String" resultType="com.myspring.daengnyang.board.vo.BoardVO">
        <![CDATA[
            SELECT
                "boardId",
                "memberNo",
                "nickname",
                "category",
                "boardName",
                "createDate",
                "reviewCnt"
            FROM
                "Board"
            WHERE
                "category" = #{category}
        ]]>
    </select>

    <select id="selectBoardReviewList" parameterType="int" resultType="com.myspring.daengnyang.board.vo.ReviewVO">
        <![CDATA[
            SELECT
                "boardReviewNum",
                "boardId",
                "nickname",
                "memberNo",
                "review",
                "star",
                "createDate"
            FROM
                "Boardreview"
            WHERE
                "boardId" = #{boardId}
        ]]>
    </select>

    <update id="updateReviewCnt">
        UPDATE "Board"
        SET "reviewCnt" = "reviewCnt" + #{amount}
        WHERE "boardId" = #{boardId}
    </update>
    
    <select id="getBoardDetail" parameterType="int" resultType="com.myspring.daengnyang.board.vo.BoardDetailVO" >
        SELECT *
        FROM "BoardDetail"
        WHERE "boardId" = #{boardId}
    </select>

    <delete id="deleteBoard">
        DELETE
        FROM "Board"
        WHERE "boardId" = #{boardId}
    </delete>

    <delete id="deleteBoardReview">
        DELETE
        FROM "Boardreview"
        WHERE "boardReviewNum" = #{boardReviewNum}
    </delete>

    <insert id="postBoard" useGeneratedKeys="true" keyProperty="boardId">
        <selectKey keyProperty="boardId" resultType="int" order="BEFORE">
            SELECT board_seq.NEXTVAL FROM dual
        </selectKey>
        <![CDATA[
            INSERT INTO "Board"
                ("boardId", "memberNo", "nickname",
                "category", "boardName", "createDate")
            VALUES #{boardId}, #{memberNo}, #{nickname}, #{category}, #{boardName}, SYSDATE)
        ]]>
    </insert>


</mapper>